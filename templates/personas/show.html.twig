{% extends 'base.html.twig' %}

{% block title %}Persona
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<h1>Persona</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ persona.id }}</td>
					</tr>
					<tr>
						<th>Nombre</th>
						<td>{{ persona.nombre }}</td>
					</tr>
					<tr>
						<th>Apellido</th>
						<td>{{ persona.apellido }}</td>
					</tr>
					<tr>
						<th>Edad</th>
						<td>{{ persona.edad }}</td>
					</tr>
					<tr>
						<th>Sexo</th>
						<td>{{ persona.sexo }}</td>
					</tr>
					<tr>
						<th>Correo</th>
						<td>{{ persona.correo }}</td>
					</tr>
				</tbody>
			</table>

			<div class="row">
				<div class="col-md">
					<a class="btn btn-info" href=" {{ path('app_personas_index') }} ">Regresar</a>

					<a class="btn btn-warning" href="{{ path('app_personas_edit', {'id': persona.id}) }}">editar</a>

					{{ include('personas/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
		<div class="col-md-2"></div>
	</div>
{% endblock %}
