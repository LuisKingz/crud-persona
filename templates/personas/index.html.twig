{% extends 'base.html.twig' %}

{% block title %}
	Lista
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<h1>Lista de Personas</h1>

			<table class="table table-striped">
				<thead class="thead-dark">
					<tr>
						<th>#</th>
						<th>Nombre</th>
						<th>Apellido</th>
						<th>Sexo</th>
						<th>Correo</th>
						<th>opciones</th>
					</tr>
				</thead>
				<tbody>
					{% for key, persona in personas %}
						<tr>
							<td>{{ key + 1 }}</td>
							<td>{{ persona.nombre }}</td>
							<td>{{ persona.apellido }}</td>
							<td>{{ persona.sexo }}</td>
							<td>{{ persona.correo }}</td>
							<td>
								<a class="btn btn-success" href="{{ path('app_personas_show', {'id': persona.id}) }}">Ver</a>
								<a class="btn btn-warning" href="{{ path('app_personas_edit', {'id': persona.id}) }}">editar</a>
								{{ include('personas/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="7">No hay registros</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a class="btn btn-info" href="{{ path('app_personas_new') }}">Registrar</a>
		</div>
		<div class="col-md-2"></div>
	</div>
{% endblock %}
